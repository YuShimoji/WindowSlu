<Window x:Class="WindowSlu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowSlu.Models"
        xmlns:converters="clr-namespace:WindowSlu.Converters"
        xmlns:vm="clr-namespace:WindowSlu.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="WindowSlu" Height="450" Width="800"
        Icon="/Assets/WindowSlu.ico"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <converters:BoolToTopMostTextConverter x:Key="BoolToTopMostTextConverter"/>
        <converters:PercentToWidthMultiConverter x:Key="PercentToWidthMultiConverter"/>

        <!-- TreeView Expander Toggle Button Style -->
        <Style x:Key="ExpanderToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="ExpandPath"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="M 0 2 L 4 6 L 8 2 Z"
                                  Fill="{DynamicResource MutedForegroundColor}"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ExpandPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Base button style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pin button style -->
        <Style x:Key="PinButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsTopMost}" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsTopMost}" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                </DataTrigger>
                 <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Icon ToggleButton Style -->
        <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Pinned Toggle Button Style -->
        <Style x:Key="PinToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ“Œ"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Click-Through Toggle Button Style -->
        <Style x:Key="ClickThroughToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ‘»"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Themed Slider Style -->
        <ControlTemplate x:Key="SliderThumbStyle" TargetType="Thumb">
            <Grid Background="Transparent">
                <Ellipse x:Name="grip"
                         Fill="{DynamicResource HighlightColor}"
                         Stroke="{DynamicResource BorderColor}"
                         StrokeThickness="1"
                         Width="14" Height="14"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="grip" Property="Fill" Value="{DynamicResource AccentHighlightColor}"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                     <Setter TargetName="grip" Property="Fill" Value="{DynamicResource AccentHighlightColor}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <Style x:Key="ThemedSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="{DynamicResource HighlightColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground"
                                    Background="{DynamicResource BorderColor}"
                                    Height="12"
                                    CornerRadius="6"
                                    VerticalAlignment="Center"/>
                            <Border x:Name="TrackValue"
                                    Background="{TemplateBinding Foreground}"
                                    Height="12"
                                    CornerRadius="6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                                     <Border.Width>
                                        <MultiBinding Converter="{StaticResource PercentToWidthMultiConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}"/>
                                        </MultiBinding>
                                    </Border.Width>
                            </Border>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
                                           Focusable="False"
                                           Height="20"
                                           Width="20"
                                           OverridesDefaultStyle="True"
                                           Template="{StaticResource SliderThumbStyle}"
                                           VerticalAlignment="Center"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl and TabItem Styles -->
        <Style x:Key="ThemedTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0,0,0,1"
                                Margin="0,0,-1,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HighlightColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HighlightColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ThemedTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" IsItemsHost="True" Background="Transparent"/>
                            <Border Grid.Row="1" 
                                    Background="{DynamicResource BackgroundColor}" 
                                    BorderBrush="{DynamicResource BorderColor}" 
                                    BorderThickness="0,1,0,0">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <tb:TaskbarIcon x:Key="NotifyIcon"
                        IconSource="/Assets/WindowSlu.ico"
                        ToolTipText="WindowSlu"
                        TrayMouseDoubleClick="NotifyIcon_DoubleClick"
                        Visibility="Collapsed">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Click="ShowMenuItem_Click"/>
                    <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

    </Window.Resources>
    
    <Border Background="{DynamicResource BackgroundColor}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Source="/Assets/WindowSlu.ico" Width="16" Height="16" Margin="5" Grid.Column="0"/>
                
                <TextBlock Grid.Column="1" 
                           Text="WindowSlu" 
                           Foreground="{DynamicResource ForegroundColor}"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="5,0"/>

                <Button Grid.Column="2" Content="&#xE793;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="ThemeToggleButton_Click" ToolTip="Toggle Theme"/>
                <Button Grid.Column="3" Content="&#xE8A0;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="TrayButton_Click" ToolTip="Minimize to Tray"/>
                <Button Grid.Column="4" Content="&#xE921;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button Grid.Column="5" Content="&#xE739;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                <Button Grid.Column="6" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click"/>
            </Grid>
            
            <!-- Main Content -->
            <TabControl Grid.Row="1" Style="{DynamicResource ThemedTabControlStyle}">
                <TabItem Header="Windows" Style="{DynamicResource ThemedTabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«ãƒãƒ¼ -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,5">
                            <Button Content="Set All to 80%" Click="SetAllTo80Percent_Click" Style="{StaticResource SettingsButtonStyle}" Width="120"/>
                            <Button Content="Set All to 100%" Click="SetAllTo100Percent_Click" Style="{StaticResource SettingsButtonStyle}" Width="120" Margin="10,0,0,0"/>
                        </StackPanel>

                        <TreeView Grid.Row="1" 
                      x:Name="WindowTreeView"
                      ItemsSource="{Binding WindowGroups}"
                      Background="Transparent"
                      BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      SelectedItemChanged="WindowTreeView_SelectedItemChanged">

                        <TreeView.Resources>
                            <!-- ã‚°ãƒ«ãƒ¼ãƒ—ãƒ˜ãƒƒãƒ€ãƒ¼ã®ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆ -->
                            <HierarchicalDataTemplate DataType="{x:Type local:WindowGroup}" ItemsSource="{Binding Windows}">
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding GroupIcon}" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center" Grid.Column="0"/>
                                    
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                        <Run Text="{Binding Name, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                        <Run Text=" (" Foreground="{DynamicResource MutedForegroundColor}"/>
                                        <Run Text="{Binding WindowCount, Mode=OneWay}" Foreground="{DynamicResource MutedForegroundColor}"/>
                                        <Run Text=")" Foreground="{DynamicResource MutedForegroundColor}"/>
                                    </TextBlock>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="â–£" ToolTip="Cascade Arrange" 
                                                Style="{StaticResource TitleBarButtonStyle}" 
                                                Click="CascadeButton_Click"
                                                Tag="{Binding}"
                                                Width="28" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </HierarchicalDataTemplate>

                            <!-- ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã‚¢ã‚¤ãƒ†ãƒ ã®ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆ -->
                            <DataTemplate DataType="{x:Type local:WindowInfo}">
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border x:Name="ActiveBorder" Background="{DynamicResource AccentHighlightColor}" Opacity="0.3" CornerRadius="3" Margin="-2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <Image Source="{Binding Icon}" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center" Grid.Column="0"/>
                                    
                                    <TextBlock Grid.Column="1" Text="{Binding Title}" 
                                               VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis" 
                                               Foreground="{DynamicResource ForegroundColor}"
                                               FontSize="12"/>

                                    <Grid Grid.Column="2" VerticalAlignment="Center">
                                        <Slider Style="{DynamicResource ThemedSliderStyle}"
                                                Minimum="0" Maximum="100" 
                                                Value="{Binding Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                ValueChanged="OpacitySlider_ValueChanged"/>
                                        <TextBlock Text="{Binding Opacity, StringFormat={}{0}%}" 
                                                   FontSize="9"
                                                   IsHitTestVisible="False"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource MutedForegroundColor}"/>
                                    </Grid>
                                    
                                    <ToggleButton Style="{StaticResource PinToggleButtonStyle}" 
                                                  IsChecked="{Binding IsTopMost, Mode=OneWay}"
                                                  Grid.Column="3"
                                                  ToolTip="Toggle Always on Top"
                                                  Click="PinButton_Click"/>

                                    <ToggleButton Style="{StaticResource ClickThroughToggleButtonStyle}"
                                                  IsChecked="{Binding IsClickThrough, Mode=OneWay}"
                                                  Grid.Column="4"
                                                  ToolTip="Toggle Click-Through"
                                                  Click="ClickThroughButton_Click"/>
                                </Grid>
                            </DataTemplate>
                        </TreeView.Resources>

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                <Setter Property="Padding" Value="2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <ToggleButton x:Name="Expander"
                                                                      ClickMode="Press"
                                                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                                      Style="{StaticResource ExpanderToggleButtonStyle}"
                                                                      Width="16" Height="16"/>
                                                        <ContentPresenter x:Name="PART_Header"
                                                                          Grid.Column="1"
                                                                          ContentSource="Header"
                                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                                    </Grid>
                                                </Border>
                                                <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Margin="16,0,0,0"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="false">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                                <Trigger Property="HasItems" Value="false">
                                                    <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource HighlightColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource HighlightColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </TabItem>
                <TabItem Header="Presets" Style="{DynamicResource ThemedTabItemStyle}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ãƒ—ãƒªã‚»ãƒƒãƒˆé¸æŠž -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Presets" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="PresetComboBox" 
                                          ItemsSource="{Binding PresetService.Presets}"
                                          DisplayMemberPath="Name"
                                          Grid.Column="0"
                                          Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="Apply" Click="ApplyPreset_Click" Style="{StaticResource SettingsButtonStyle}" Width="70"/>
                                    <Button Content="New" Click="NewPreset_Click" Style="{StaticResource SettingsButtonStyle}" Width="60"/>
                                    <Button Content="Delete" Click="DeletePreset_Click" Style="{StaticResource SettingsButtonStyle}" Width="70"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- ãƒ—ãƒªã‚»ãƒƒãƒˆè¨­å®š -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel DataContext="{Binding ElementName=PresetComboBox, Path=SelectedItem}">
                                <TextBlock Text="Preset Settings" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}" Margin="0,10,0,10"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Size (WxH):" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBox Grid.Column="1" Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                    <TextBlock Grid.Column="2" Text="x" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBox Grid.Column="3" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Opacity:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Slider Minimum="0" Maximum="100" Value="{Binding Opacity, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="5,0"/>
                                        <TextBlock Text="{Binding Opacity, StringFormat={}{0}%}" VerticalAlignment="Center" Foreground="{DynamicResource MutedForegroundColor}" Margin="5,0"/>
                                    </StackPanel>
                                </Grid>

                                <CheckBox Content="Always on Top" IsChecked="{Binding IsTopMost}" Margin="0,10" Foreground="{DynamicResource ForegroundColor}"/>

                                <TextBlock Text="Cascade Settings" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}" Margin="0,15,0,10"/>
                                <CheckBox Content="Enable Cascade" IsChecked="{Binding EnableCascade}" Margin="0,5" Foreground="{DynamicResource ForegroundColor}"/>
                                
                                <Grid Margin="0,5" IsEnabled="{Binding EnableCascade}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Offset (X,Y):" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBox Grid.Column="1" Text="{Binding CascadeOffsetX, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                    <TextBlock Grid.Column="2" Text="," VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBox Grid.Column="3" Text="{Binding CascadeOffsetY, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                </Grid>

                                <Grid Margin="0,5" IsEnabled="{Binding EnableCascade}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Direction:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                    <ComboBox Grid.Column="1" SelectedItem="{Binding CascadeDirection}" Margin="5,0" Width="120" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="BottomRight"/>
                                        <ComboBoxItem Content="TopRight"/>
                                        <ComboBoxItem Content="BottomLeft"/>
                                        <ComboBoxItem Content="TopLeft"/>
                                        <ComboBoxItem Content="Right"/>
                                        <ComboBoxItem Content="Down"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>

                        <Button Grid.Row="2" Content="Save Presets" Click="SavePresets_Click" 
                                Style="{StaticResource SettingsButtonStyle}" 
                                HorizontalAlignment="Right" Margin="0,10,0,0" Width="100"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Settings" Style="{DynamicResource ThemedTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Appearance" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
