<Window x:Class="WindowSlu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowSlu.Models"
        xmlns:converters="clr-namespace:WindowSlu.Converters"
        xmlns:vm="clr-namespace:WindowSlu.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="WindowSlu" Height="450" Width="800"
        Icon="/Assets/WindowSlu.ico"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <converters:BoolToTopMostTextConverter x:Key="BoolToTopMostTextConverter"/>
        <converters:PercentToWidthMultiConverter x:Key="PercentToWidthMultiConverter"/>
        
        <!-- CascadeDirection enum values for ComboBox -->
        <ObjectDataProvider x:Key="CascadeDirectionValues" MethodName="GetValues" ObjectType="{x:Type local:CascadeDirection}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:CascadeDirection"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- TreeView Expander Toggle Button Style -->
        <Style x:Key="ExpanderToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="ExpandPath"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="M 0 2 L 4 6 L 8 2 Z"
                                  Fill="{DynamicResource MutedForegroundColor}"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ExpandPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Base button style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Settings button style (for main content buttons) -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource ControlColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHighlightColor}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pin button style -->
        <Style x:Key="PinButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsTopMost}" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsTopMost}" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                </DataTrigger>
                 <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Icon ToggleButton Style -->
        <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentHighlightColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Pinned Toggle Button Style -->
        <Style x:Key="PinToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ“Œ"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Click-Through Toggle Button Style -->
        <Style x:Key="ClickThroughToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ‘»"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="Background" Value="{DynamicResource ListItemSelectedColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Linked Drag Toggle Button Style (for group header) -->
        <Style x:Key="LinkedDragToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ”—"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ToolTip" Value="Enable Linked Drag for this group"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Linked Drag Toggle Button Style (for individual windows) -->
        <Style x:Key="WindowLinkedDragToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource IconToggleButtonStyle}">
            <Setter Property="Content" Value="ðŸ”—"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ToolTip" Value="Include in Linked Drag"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundColor}"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cascade Icon Button Style (for group header in Windows tab) -->
        <Style x:Key="CascadeButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Content" Value="&#xE8A9;"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="ToolTip" Value="Cascade Arrange"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Themed Slider Style -->
        <ControlTemplate x:Key="SliderThumbStyle" TargetType="Thumb">
            <Grid Background="Transparent">
                <Ellipse x:Name="grip"
                         Fill="{DynamicResource HighlightColor}"
                         Stroke="{DynamicResource BorderColor}"
                         StrokeThickness="1"
                         Width="14" Height="14"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="grip" Property="Fill" Value="{DynamicResource AccentHighlightColor}"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                     <Setter TargetName="grip" Property="Fill" Value="{DynamicResource AccentHighlightColor}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <Style x:Key="ThemedSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="{DynamicResource HighlightColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground"
                                    Background="{DynamicResource BorderColor}"
                                    Height="12"
                                    CornerRadius="6"
                                    VerticalAlignment="Center"/>
                            <Border x:Name="TrackValue"
                                    Background="{TemplateBinding Foreground}"
                                    Height="12"
                                    CornerRadius="6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                                     <Border.Width>
                                        <MultiBinding Converter="{StaticResource PercentToWidthMultiConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}"/>
                                        </MultiBinding>
                                    </Border.Width>
                            </Border>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
                                           Focusable="False"
                                           Height="20"
                                           Width="20"
                                           OverridesDefaultStyle="True"
                                           Template="{StaticResource SliderThumbStyle}"
                                           VerticalAlignment="Center"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl and TabItem Styles -->
        <Style x:Key="ThemedTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0,0,0,1"
                                Margin="0,0,-1,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HighlightColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HighlightColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ThemedTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" IsItemsHost="True" Background="Transparent"/>
                            <Border Grid.Row="1" 
                                    Background="{DynamicResource BackgroundColor}" 
                                    BorderBrush="{DynamicResource BorderColor}" 
                                    BorderThickness="0,1,0,0">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <tb:TaskbarIcon x:Key="NotifyIcon"
                        IconSource="/Assets/WindowSlu.ico"
                        ToolTipText="WindowSlu"
                        TrayMouseDoubleClick="NotifyIcon_DoubleClick"
                        Visibility="Collapsed">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Click="ShowMenuItem_Click"/>
                    <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

    </Window.Resources>
    
    <Border Background="{DynamicResource BackgroundColor}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Source="/Assets/WindowSlu.ico" Width="16" Height="16" Margin="5" Grid.Column="0"/>
                
                <TextBlock Grid.Column="1" 
                           Text="WindowSlu" 
                           Foreground="{DynamicResource ForegroundColor}"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="5,0"/>

                <Button Grid.Column="2" Content="&#xE793;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="ThemeToggleButton_Click" ToolTip="Toggle Theme"/>
                <Button Grid.Column="3" Content="&#xE8A0;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="TrayButton_Click" ToolTip="Minimize to Tray"/>
                <Button Grid.Column="4" Content="&#xE921;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button Grid.Column="5" Content="&#xE739;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                <Button Grid.Column="6" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click"/>
            </Grid>
            
            <!-- Main Content -->
            <TabControl Grid.Row="1" Style="{DynamicResource ThemedTabControlStyle}">
                <TabItem Header="Windows" Style="{DynamicResource ThemedTabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«ãƒãƒ¼ -->
                        <Grid Grid.Row="0" Margin="10,10,10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- å·¦å´: ä¸€æ‹¬ä¸é€æ˜Žåº¦è¨­å®š -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Bulk opacity:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,5,0"/>
                                <Slider Style="{StaticResource ThemedSliderStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding BulkOpacityPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                                <!-- ç¾åœ¨ã®Bulk opacityã‚’å…¨ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã«é©ç”¨ï¼ˆå°ã•ãªã‚¢ã‚¤ã‚³ãƒ³ãƒœã‚¿ãƒ³ï¼‰ -->
                                <Button Click="SetAllTo80Percent_Click"
                                        Style="{StaticResource SettingsButtonStyle}"
                                        Width="72"
                                        Height="24"
                                        Margin="12,0,0,0"
                                        ToolTip="Apply current bulk opacity to all windows">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE8FB;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   Margin="0,0,4,0"
                                                   Foreground="{DynamicResource AccentColor}"/>
                                        <TextBlock Text="{Binding BulkOpacityPercent, StringFormat={}{0}%}"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource AccentColor}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- å³å´: ãƒªã‚»ãƒƒãƒˆãƒœã‚¿ãƒ³ï¼ˆ100%ï¼‰ -->
                            <Button Grid.Column="1"
                                    Click="SetAllTo100Percent_Click"
                                    Style="{StaticResource SettingsButtonStyle}"
                                    Width="70"
                                    Height="24"
                                    HorizontalAlignment="Right"
                                    ToolTip="Reset opacity of all windows to 100%">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,4,0" Foreground="{DynamicResource AccentColor}"/>
                                    <TextBlock Text="100%" Foreground="{DynamicResource AccentColor}"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>

                            <!-- ä¸Šå´: ãƒ•ãƒ©ãƒƒãƒˆãªã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ä¸€è¦§ -->
                            <Border Grid.Row="0" Margin="10,0,10,5" Background="{DynamicResource CardBackgroundColor}" CornerRadius="4">
                                <DockPanel Margin="8">
                                    <!-- ãƒ˜ãƒƒãƒ€ãƒ¼: ã‚¿ã‚¤ãƒˆãƒ«ã¨ãƒ•ã‚£ãƒ«ã‚¿ -->
                                    <Grid DockPanel.Dock="Top" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="All Windows"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource MutedForegroundColor}"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Windows.Count, StringFormat=({0})}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedForegroundColor}"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0,0,0"
                                                   Grid.Column="1"/>
                                        <Grid Grid.Column="2" Width="150">
                                            <TextBox x:Name="WindowFilterTextBox"
                                                     Text="{Binding WindowFilterText, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="{DynamicResource BackgroundColor}"
                                                     Foreground="{DynamicResource ForegroundColor}"
                                                     BorderBrush="{DynamicResource BorderColor}"
                                                     FontSize="10"
                                                     VerticalContentAlignment="Center"
                                                     Padding="4,2"/>
                                            <TextBlock Text="ðŸ” Filter..."
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       Margin="6,0,0,0"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource MutedForegroundColor}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, ElementName=WindowFilterTextBox}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <!-- åˆ—ãƒ˜ãƒƒãƒ€ãƒ¼ -->
                                    <Grid DockPanel.Dock="Top" Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="1" Text="Title" FontSize="9" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundColor}"/>
                                        <TextBlock Grid.Column="2" Text="Process" FontSize="9" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundColor}" Margin="8,0,0,0"/>
                                    </Grid>
                                    <ListView ItemsSource="{Binding FilteredWindows}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListView.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:WindowInfo}">
                                                <Grid Margin="0,2" MouseMove="WindowItem_MouseMove" Tag="{Binding}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="{Binding Icon}" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" Grid.Column="0"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Title}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{DynamicResource ForegroundColor}"
                                                               FontSize="11"/>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding ProcessName}"
                                                               Margin="8,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource MutedForegroundColor}"
                                                               FontSize="10"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </DockPanel>
                            </Border>

                            <!-- ä¸­å¤®: ã‚¹ãƒ—ãƒªãƒƒã‚¿ -->
                            <GridSplitter Grid.Row="1"
                                          HorizontalAlignment="Stretch"
                                          Height="5"
                                          Background="{DynamicResource BorderColor}"
                                          ShowsPreview="False"/>

                            <!-- ä¸‹å´: æ—¢å­˜ã®ã‚°ãƒ«ãƒ¼ãƒ— TreeView -->
                            <TreeView Grid.Row="2" 
                                      x:Name="WindowTreeView"
                                      ItemsSource="{Binding WindowGroups}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      SelectedItemChanged="WindowTreeView_SelectedItemChanged">

                                <TreeView.Resources>
                                    <!-- ã‚°ãƒ«ãƒ¼ãƒ—ãƒ˜ãƒƒãƒ€ãƒ¼ã®ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆ -->
                                    <HierarchicalDataTemplate DataType="{x:Type local:WindowGroup}" ItemsSource="{Binding Windows}">
                                        <Grid Margin="0,5" AllowDrop="True" Drop="GroupHeader_Drop" DragOver="GroupHeader_DragOver" Tag="{Binding}">
                                            <Grid.RowDefinitions>
